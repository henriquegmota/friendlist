{{!-- chamada do componente de lista informando os parametros que se´ra plotado na tela --}}
{{!-- people-list title="List of Friends" model=model --}}
{{#link-to "create"}}
    Novo
{{/link-to}}
<hr>
<table>
    <thead>
        <tr>
            <th>Nome</th>
            <th>Sobrenome</th>
            <th>Data de Início da Amizade</th>
            <th></th>
        </tr>
    </thead>
    <tbody>
         {{#each model as |friend|}}
            <tr>
                <td>{{ friend.name }}</td>
                <td>{{ friend.lastname }}</td>
                <td>{{ friend.friendsSince }}</td>
                <td>
                  {{#link-to "detail" friend.id}}
                        Detalhes
                    {{/link-to}}
                    {{#link-to "update" friend.id}}
                        Atualizar
                    {{/link-to}}
                </td>
            </tr>
          {{/each}}
    </tbody>
</table>
